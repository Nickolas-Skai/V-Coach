  box-shadow: 0 5px 15px rgba(0,0,0,0.05);
  text-align: center;
}

.features-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30px;
  margin-top: 30px;
}

.feature-box {
  background: #f9f9f9;
  border-radius: 8px;
  padding: 20px;
  text-align: left;
}

