{{ define "content" }}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>{{ .Title }}</title>
  <link rel="stylesheet" href="/static/css/styles.css">
</head>
<body>
<div class="interview-container">
  <div class="chat-header">ðŸŽ¤ V-Coach Interview</div>

<form id="interview-form" method="POST" action="/next/question?q={{ if .CurrentQuestion }}{{ .CurrentQuestion.ID }}{{ else }}0{{ end }}"> 
   {{ range .Questions }}
      <div class="question-block" data-question="{{ .Text }}">
        <p class="question-text">{{ .Text }}</p>

        {{ if eq .Type "text" }}
          <textarea name="answer" rows="3" required></textarea>

        {{ else if or (eq .Type "radio") (eq .Type "scale") }}
          {{ $id := .ID }}
          {{ range .Options }}
            <label><input type="radio" name="answer" value="{{ . }}" required> {{ . }}</label><br>
          {{ end }}

        {{ else if eq .Type "checkbox" }}
          {{ $id := .ID }}
          {{ range .Options }}
            <label><input type="checkbox" name="answer" value="{{ . }}"> {{ . }}</label><br>
          {{ end }}

        {{ else if eq .Type "file" }}
          <input type="file" name="answer">
        {{ end }}

        <input type="hidden" name="question_id" value="{{ .ID }}">
      </div>
    {{ end }}
    <button type="submit" id="next-question">Next</button>  
    <button type="button" id="prev-question">Previous Question</button>

  </form>

  <button id="speak-current" type="button">ðŸ”Š Read Question</button>
  <button id="voice-fill" type="button">ðŸŽ¤ Voice Input</button>
</div>
<script>
  const questions = {{ .Questions }};
</script>

<script src="/static/js/speech.js"></script>
</body>
</html>
{{ end }}
