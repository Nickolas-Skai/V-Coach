{{ define "content" }}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>{{ .Title }}</title>
  <link rel="stylesheet" href="/static/css/styles.css">
</head>
<body>
  <div class="interview-container">
    <div class="chat-header">🎤 V-Coach Interview</div>
    <div id="chat-window">
      <div id="question-area" class="bot-bubble"></div>
      <form id="answer-form" enctype="multipart/form-data">
        <div id="input-field"></div>
        <div class="input-controls">
          <button type="button" id="start-voice">🎙️ Speak</button>
          <button type="submit" id="next-btn">Next</button>
        </div>
      </form>
      <div id="finish-area" style="display:none;">
        <button id="submit-all">✅ Submit Interview</button>
      </div>
    </div>
  </div>
  <script>
    const questions = {{ .QuestionsJSON }};
    console.log("Loaded Questions:", questions);
    if (questions.length === 0) {
      console.warn("No questions available for the interview");
    }
  </script>
  <script src="/static/js/interview.js"></script>
</body>
</html>
{{ end }}
