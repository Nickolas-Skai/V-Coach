{{ define "content" }}
<h2>Coach Dashboard</h2>
<h3>Your Teachers</h3>
<table>
  <thead><tr><th>Name</th><th>School</th><th>Actions</th></tr></thead>
  <tbody>
    {{ range .Teachers }}
      <tr>
        <td>{{ .Name }}</td>
        <td>{{ .School }}</td>
        <td>
          <a href="/coach/sessions/{{ .ID }}">View Sessions</a> |
          <a href="/coach/delete_teacher/{{ .ID }}" onclick="return confirm('Are you sure you want to delete this teacher?');">Delete</a>
        </td>
      </tr>
    {{ end }}
  </tbody>
</table>
{{ end }}
{{ template "base" . }}
