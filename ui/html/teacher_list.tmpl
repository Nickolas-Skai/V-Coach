
{{ define "content" }}
<div class="teacher-list-container">
  <h2>👩‍🏫 Assigned Teachers</h2>
  <table class="teacher-table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {{ range .Teachers }}
        <tr>
          <td>{{ .Name }}</td>
          <td>{{ .Email }}</td>
                    <td>
            <a href="/coach/teachers/{{ .ID }}/sessions" class="btn">Sessions</a>
            <a href="/coach/teachers/{{ .ID }}/details" class="btn-secondary">View</a>
          </td>
        </tr>
      {{ else }}
        <tr><td colspan="5">No teachers assigned.</td></tr>
      {{ end }}
    </tbody>
  </table>
</div>
{{ end }}
